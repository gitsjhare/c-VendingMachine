@model CansSetupModel
@{
    ViewData["Title"] = "Setup";
}
@using (Html.BeginForm("SetupCans", "Setup", FormMethod.Post))
{
    <div class="row" style="margin-top:20px;">
        <div class="col-lg-2">
            <label title="Flavers of Cans">Flavers of Cans</label>
        </div>
        <div class="col-lg-2">
            <label title="Quentity">Quentity</label>
        </div>
        <div class="col-lg-2">
            <label title="Quentity">Price</label>
            <label title="Quentity">Dollar | Cents</label>
        </div>
    </div>

    <div class="row" style="margin-top:20px;">
        <div class="col-lg-2">

        </div>
        <div class="col-lg-2">

        </div>
        <div class="col-lg-3">
            @Html.TextBoxFor(m => Model.Dollar, new { style = "width:40px; margin-left:40px;", autocomplete = "off" })
            @Html.HiddenFor(m => Model.Dollar)
            @Html.TextBoxFor(m => Model.Cents, new { style = "width:40px;", autocomplete = "off" })
            @Html.HiddenFor(m => Model.Cents)
        </div>
    </div>

    @if (Model.CansDetail.Count > 0)
    {
        for (int i = 0; i < Model.CansDetail.Count; i++)
        {
            <div class="row">
                <div class="col-lg-2">
                    @Html.TextBoxFor(m => Model.CansDetail[i].Flavor)
                    @Html.HiddenFor(m => Model.CansDetail[i].Flavor)
                </div>
                <div class="col-lg-2">
                    @Html.TextBoxFor(m => Model.CansDetail[i].Quentity)
                    @Html.HiddenFor(m=>Model.CansDetail[i].Quentity)
                </div>
            </div>

        }
    }
    <input type="submit" value="Setup" />
}
